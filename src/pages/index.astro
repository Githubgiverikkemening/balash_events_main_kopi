text-align: center; 
z-index: 1; 
white-space: nowrap;
font-size: 5vw;
  }
  .drinks, .suppe, .fisk {
  aspect-ratio: 1 / 1;
    object-fit: cover; 
}
}
@media (min-width: 501px) and (max-width: 799px){
.container {
display: flex;
justify-content: center;
align-items: center;
flex-wrap: wrap;
}
.container img, .container video {
width: 100%;
max-width: 799px;
height: auto;
object-fit: cover;
margin-bottom: 5%;
}

.drinks, .suppe, .fisk {
  aspect-ratio: 1 / 1;
    object-fit: cover; 
}

.container {
margin-left: 10%;
margin-right: 10%;
margin-bottom: 13%;
max-width: 799px;
}



.soho-container {
position: relative; 
  }
.balashxsoho {
position: absolute; 
top: 50%;
left: 50%;
transform: translate(-50%, -50%); 
color: white; 
text-align: center; 
z-index: 1; 
white-space: nowrap;
font-size: 5vw;
  }
}
@media (min-width: 800px) {	
.container {
  margin-left: 7%;
  margin-right: 7%;
  margin-bottom: 7%;
}



.container img, .container video {
width: 100%; 
height: 100%;
object-fit: cover; 
    }
.container {
display: grid;
grid-template-columns: 1fr 1fr;
grid-template-rows: 1fr 1fr 1fr;
gap: 2%;
}
.drinks {
grid-column: 2 / 3;
grid-row: 1;
object-fit: cover;
}
.soho-container {
grid-column: 1 / 3;
grid-row: 2;
position: relative; 
  }
.soho {
grid-column: 1 / 3;
grid-row: 2;
object-fit: cover;
}
.balashxsoho {
position: absolute; 
top: 50%;
left: 50%;
transform: translate(-50%, -50%); 
color: white; 
text-align: center; 
z-index: 1; 
white-space: nowrap;
font-size: 5vw;
  }
.suppe {
grid-column: 1 / 2;
grid-row: 3;
object-fit: cover;
}
.fisk {
grid-column: 2 / 3;
grid-row: 3;
object-fit: cover;
}
}
